<Window x:Class="OrenburgCommunElectroNetwork.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OrenburgCommunElectroNetwork.ViewModels"
        xmlns:converters="clr-namespace:OrenburgCommunElectroNetwork.Converters"
        Title="Главная - АО 'Оренбургкоммунэлектросеть'"
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">

    <Window.Resources>
        <!-- Добавляем оба конвертера -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:RoleToTextConverter x:Key="RoleToTextConverter"/>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и название -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="⚡" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="АО 'Оренбургкоммунэлектросеть'" 
                               Foreground="White" 
                               FontSize="16"
                               FontWeight="Bold"/>
                </StackPanel>

                <!-- Информация о пользователе -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentUser.FullName}" 
                               Foreground="White" 
                               FontSize="14"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CurrentUser.Role, Converter={StaticResource RoleToTextConverter}}"
                               Foreground="#BDC3C7"
                               FontSize="12"/>
                </StackPanel>

                <!-- Выход -->
                <Button Grid.Column="2" 
                        Content="Выйти" 
                        Command="{Binding LogoutCommand}"
                        Style="{StaticResource MenuButtonStyle}"
                        Background="#E74C3C"
                        Padding="10,5"/>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Меню навигации -->
            <Border Grid.Column="0" Background="White" CornerRadius="5" Margin="0,0,10,0">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="МЕНЮ" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,10"/>

                        <!-- Общие разделы для всех -->
                        <Button Content="📋 Справочник сотрудников" 
                                Command="{Binding OpenEmployeeDirectoryCommand}"
                                Style="{StaticResource MenuButtonStyle}"
                                Margin="0,0,0,5"/>

                        <Button Content="📅 Календарь" 
                                Command="{Binding OpenCalendarCommand}"
                                Style="{StaticResource MenuButtonStyle}"
                                Margin="0,0,0,5"/>

                        <Button Content="👤 Личный кабинет" 
                                Command="{Binding OpenPersonalCabinetCommand}"
                                Style="{StaticResource MenuButtonStyle}"
                                Margin="0,0,0,15"/>

                        <!-- Разделы для администратора и редактора -->
                        <TextBlock Text="НОВОСТИ И ОБЪЯВЛЕНИЯ" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,10"
                                   Visibility="{Binding CurrentUser.CanEditNews, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <Button Content="📰 Лента новостей" 
                                Command="{Binding OpenNewsFeedCommand}"
                                Style="{StaticResource MenuButtonStyle}"
                                Margin="0,0,0,5"
                                Visibility="{Binding CurrentUser.CanEditNews, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <Button Content="➕ Добавить новость" 
                                Command="{Binding AddNewsCommand}"
                                Style="{StaticResource MenuButtonStyle}"
                                Margin="0,0,0,5"
                                Background="#27AE60"
                                Visibility="{Binding CurrentUser.CanEditNews, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Разделы только для администратора -->
                        <TextBlock Text="АДМИНИСТРИРОВАНИЕ" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"
                                   Margin="0,20,0,10"
                                   Visibility="{Binding CurrentUser.CanEditSystemSettings, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <Button Content="⚙️ Настройки системы" 
                                Command="{Binding OpenSystemSettingsCommand}"
                                Style="{StaticResource MenuButtonStyle}"
                                Margin="0,0,0,5"
                                Background="#9B59B6"
                                Visibility="{Binding CurrentUser.CanEditSystemSettings, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <Button Content="👥 Управление пользователями" 
                                Command="{Binding OpenUserManagementCommand}"
                                Style="{StaticResource MenuButtonStyle}"
                                Margin="0,0,0,5"
                                Background="#9B59B6"
                                Visibility="{Binding CurrentUser.CanEditSystemSettings, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <Button Content="📊 Статистика и отчеты" 
                                Command="{Binding OpenReportsCommand}"
                                Style="{StaticResource MenuButtonStyle}"
                                Margin="0,0,0,5"
                                Background="#9B59B6"
                                Visibility="{Binding CurrentUser.CanEditSystemSettings, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Область контента -->
            <Border Grid.Column="1" Background="White" CornerRadius="5">
                <ContentControl Content="{Binding CurrentContent}"/>
            </Border>
        </Grid>

        <!-- Статусная строка -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="10">
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="#7F8C8D"
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>