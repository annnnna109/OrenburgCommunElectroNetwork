<Window x:Class="OrenburgCommunElectroNetwork.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="АО 'Оренбургкоммунэлектросеть' - Справочник сотрудников" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1ABC9C"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#16A085"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="АО 'Оренбургкоммунэлектросеть'" 
                          Foreground="White" FontSize="16" FontWeight="Light"/>

                <TextBlock Grid.Column="2" Text="{Binding CurrentUserName}" 
                          Foreground="White" FontSize="14"/>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="#34495E" Padding="10">
                <StackPanel>
                    <Button Content="📋 Справочник" 
                            Command="{Binding NavigateToDirectoryCommand}"
                            Style="{StaticResource NavigationButtonStyle}"/>
                    <Button Content="📰 Новости" 
                            Command="{Binding NavigateToNewsCommand}"
                            Style="{StaticResource NavigationButtonStyle}"/>
                    <Button Content="📅 Календарь" 
                            Command="{Binding NavigateToCalendarCommand}"
                            Style="{StaticResource NavigationButtonStyle}"/>

                    <Separator Margin="0,10,0,10" Background="#5D6D7E"/>
                    <Button Content="⚙️ Администрирование" 
                            Command="{Binding NavigateToAdminCommand}"
                            Style="{StaticResource NavigationButtonStyle}"
                            Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}" Height="38" Width="199"/>
                </StackPanel>
            </Border>
            <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}"/>
        </Grid>
        <StatusBar Grid.Row="2" Background="#ECF0F1">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding CurrentDateTime}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>