<Window x:Class="OrenburgCommunElectroNetwork.Views.CalendarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OrenburgCommunElectroNetwork.Converters"
        Title="Календарь - АО 'Оренбургкоммунэлектросеть'"
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">

    <Window.Resources>
        <!-- Конвертеры -->
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <!-- Стили для заголовков -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стили для кнопок действий -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                    <Setter Property="BorderBrush" Value="#1C5A7D"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1C5A7D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стили для дней календаря -->
        <Style x:Key="CalendarDayStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsToday}" Value="True">
                    <Setter Property="Background" Value="#FFF9C4"/>
                    <Setter Property="BorderBrush" Value="#FFEB3B"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding HasNote}" Value="True">
                    <Setter Property="Background" Value="{Binding NoteColorBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="{Binding NoteColorBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsCurrentMonth}" Value="False">
                    <Setter Property="Foreground" Value="#BDC3C7"/>
                    <Setter Property="Background" Value="#F8F9FA"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для ComboBox -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для панели заметок -->
        <Style x:Key="NotePanelStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Стиль для кнопок заметок -->
        <Style x:Key="NoteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с заголовком и элементами управления -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📅" FontSize="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Календарь" 
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"/>
                </StackPanel>

                <!-- Выбор месяца и года -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ComboBox x:Name="MonthComboBox"
                              ItemsSource="{Binding Months}"
                              SelectedItem="{Binding SelectedMonth}"
                              DisplayMemberPath="Name"
                              Width="140"
                              Margin="0,0,15,0"
                              Style="{StaticResource ComboBoxStyle}"/>

                    <ComboBox x:Name="YearComboBox"
                              ItemsSource="{Binding Years}"
                              SelectedItem="{Binding SelectedYear}"
                              Width="100"
                              Style="{StaticResource ComboBoxStyle}"/>
                </StackPanel>

                <!-- Кнопки действий -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="➕ Новая заметка"
                            Command="{Binding AddNoteCommand}"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#27AE60"/>
                    <Button Content="🔄 Обновить"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#95A5A6"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основная область с календарем -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовки дней недели -->
            <UniformGrid Grid.Row="0" Rows="1" Columns="7" Background="#ECF0F1" Margin="0,0,0,5">
                <TextBlock Text="Пн" Style="{StaticResource HeaderTextStyle}" TextAlignment="Center" Padding="10,5"/>
                <TextBlock Text="Вт" Style="{StaticResource HeaderTextStyle}" TextAlignment="Center" Padding="10,5"/>
                <TextBlock Text="Ср" Style="{StaticResource HeaderTextStyle}" TextAlignment="Center" Padding="10,5"/>
                <TextBlock Text="Чт" Style="{StaticResource HeaderTextStyle}" TextAlignment="Center" Padding="10,5"/>
                <TextBlock Text="Пт" Style="{StaticResource HeaderTextStyle}" TextAlignment="Center" Padding="10,5"/>
                <TextBlock Text="Сб" Style="{StaticResource HeaderTextStyle}" TextAlignment="Center" Padding="10,5"/>
                <TextBlock Text="Вс" Style="{StaticResource HeaderTextStyle}" TextAlignment="Center" Padding="10,5"/>
            </UniformGrid>

            <!-- Сетка дней -->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding CalendarDays}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="6" Columns="7"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding DayNumber}"
                                Style="{StaticResource CalendarDayStyle}"
                                Command="{Binding DataContext.SelectDayCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}">
                            <Button.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Date, StringFormat='dd.MM.yyyy'}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding NoteText}" 
                                                   Visibility="{Binding HasNote, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   TextWrapping="Wrap" MaxWidth="200"/>
                                        <TextBlock Text="Нет заметок" 
                                                   Foreground="Gray"
                                                   Visibility="{Binding HasNote, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                    </StackPanel>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <!-- Панель заметок -->
        <Border Grid.Row="2" Background="White" BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="5" Margin="15,0,15,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок панели заметок -->
                <TextBlock Grid.Row="0" Text="Заметки на выбранную дату:" 
                           Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,10"/>

                <!-- Список заметок -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding SelectedDayNotes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding NoteColorBrush}" 
                                        Style="{StaticResource NotePanelStyle}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Заголовок заметки -->
                                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                                            <TextBlock Text="{Binding Date, StringFormat='dd.MM.yyyy'}" 
                                                       FontWeight="Bold" Foreground="White" Margin="0,0,10,0"/>
                                            <TextBlock Text="(Сегодня)" Foreground="White" 
                                                       Visibility="{Binding IsToday, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>

                                        <!-- Текст заметки -->
                                        <TextBlock Grid.Row="1" Text="{Binding NoteText}" 
                                                   Foreground="White" Margin="0,10,0,10"
                                                   TextWrapping="Wrap" FontSize="14"/>

                                        <!-- Кнопки действий -->
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="✏️ Редактировать" 
                                                    Command="{Binding DataContext.EditNoteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource NoteButtonStyle}"
                                                    Background="#3498DB"/>

                                            <Button Content="🗑️ Удалить" 
                                                    Command="{Binding DataContext.DeleteNoteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource NoteButtonStyle}"
                                                    Background="#E74C3C"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Сообщение при отсутствии заметок -->
                <Border Grid.Row="2" 
                        Visibility="{Binding SelectedDayNotes.Count, Converter={StaticResource CountToVisibilityConverter}}"
                        Background="#F8F9FA" 
                        CornerRadius="5" 
                        Padding="20">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📝" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Нет заметок для выбранной даты" 
                                   HorizontalAlignment="Center"
                                   FontStyle="Italic" 
                                   Foreground="#7F8C8D"
                                   FontSize="14"/>
                        <TextBlock Text="Нажмите на день, чтобы добавить заметку" 
                                   HorizontalAlignment="Center"
                                   Foreground="#95A5A6"
                                   FontSize="12"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>