<Window x:Class="OrenburgCommunElectroNetwork.Views.NoteEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование заметки"
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="ColorButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Текст заметки:" FontWeight="Bold" Margin="0,0,0,5"/>

        <TextBox Grid.Row="1" x:Name="NoteTextBox" 
                 Text="{Binding NoteText, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 FontSize="14"
                 Padding="5"/>

        <TextBlock Grid.Row="2" Text="Цвет заметки:" FontWeight="Bold" Margin="0,10,0,5"/>

        <WrapPanel Grid.Row="3" Margin="0,0,0,10">
            <Button Background="Red" Tag="#FFFF0000" Style="{StaticResource ColorButtonStyle}"
                    Click="ColorButton_Click"/>
            <Button Background="Green" Tag="#FF008000" Style="{StaticResource ColorButtonStyle}"
                    Click="ColorButton_Click"/>
            <Button Background="Blue" Tag="#FF0000FF" Style="{StaticResource ColorButtonStyle}"
                    Click="ColorButton_Click"/>
            <Button Background="Yellow" Tag="#FFFFFF00" Style="{StaticResource ColorButtonStyle}"
                    Click="ColorButton_Click"/>
            <Button Background="Purple" Tag="#FF800080" Style="{StaticResource ColorButtonStyle}"
                    Click="ColorButton_Click"/>
            <Button Background="Orange" Tag="#FFFFA500" Style="{StaticResource ColorButtonStyle}"
                    Click="ColorButton_Click"/>
            <Button Background="Cyan" Tag="#FF00FFFF" Style="{StaticResource ColorButtonStyle}"
                    Click="ColorButton_Click"/>
            <Button Background="Pink" Tag="#FFFFC0CB" Style="{StaticResource ColorButtonStyle}"
                    Click="ColorButton_Click"/>
        </WrapPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="80" Height="30" Margin="5" 
                    Click="SaveButton_Click" Background="#27AE60" Foreground="White"/>
            <Button Content="Отмена" Width="80" Height="30" Margin="5"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
