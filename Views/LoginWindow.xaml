<Window x:Class="OrenburgCommunElectroNetwork.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация - АО 'Оренбургкоммунэлектросеть'" 
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDC3C7"/>
                    <Setter Property="Foreground" Value="#7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для текстовых полей -->
        <Style x:Key="LoginTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style x:Key="LoginPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Основной контейнер с тенью -->
    <Border Background="White" 
            CornerRadius="10" 
            Margin="20">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" 
                              Opacity="0.3" 
                              BlurRadius="20" 
                              Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" 
                    Background="#2C3E50" 
                    CornerRadius="10,10,0,0"
                    Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock Text="АО 'Оренбургкоммунэлектросеть'" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="Корпоративный портал" 
                                   Foreground="#BDC3C7" 
                                   FontSize="12"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Кнопка закрытия -->
                    <Button Grid.Column="1" 
                            Content="✕" 
                            Command="{Binding CloseCommand}"
                            Background="Transparent" 
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="Bold"
                            Width="30" 
                            Height="30"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E74C3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Форма авторизации -->
            <StackPanel Grid.Row="1" 
                        Margin="30,30"
                        VerticalAlignment="Center">

                <TextBlock Text="Вход в систему" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Поле логина -->
                <TextBlock Text="Логин" 
                           Foreground="#34495E" 
                           FontWeight="SemiBold"
                           FontSize="13"/>
                <TextBox x:Name="UsernameTextBox"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource LoginTextBoxStyle}"
                         TabIndex="1">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <!-- Поле пароля -->
                <TextBlock Text="Пароль" 
                           Foreground="#34495E" 
                           FontWeight="SemiBold"
                           FontSize="13"
                           Margin="0,15,0,0"/>
                <PasswordBox x:Name="PasswordBox"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Style="{StaticResource LoginPasswordBoxStyle}"
                             TabIndex="2">
                    <PasswordBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                    </PasswordBox.InputBindings>
                </PasswordBox>

                <!-- Чекбокс запомнить меня -->
                <CheckBox Content="Запомнить меня" 
                          IsChecked="{Binding RememberMe}"
                          Foreground="#34495E"
                          FontSize="13"
                          Margin="0,15,0,0"
                          VerticalAlignment="Center"/>

                <!-- Сообщение об ошибке -->
                <Border x:Name="ErrorBorder"
                        Background="#FDEDED" 
                        BorderBrush="#F5B7B1" 
                        BorderThickness="1"
                        Padding="10,8"
                        CornerRadius="3"
                        Margin="0,15,0,0"
                        Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="❌" 
                                   FontSize="12" 
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="#C0392B" 
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Кнопка входа -->
                <Button Content="Войти в систему" 
                        IsDefault="True"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource LoginButtonStyle}"
                        TabIndex="3" Click="Button_Click"/>

                <!-- Информация о системе -->
                <TextBlock Text="Для демонстрации используйте: admin / admin123" 
                           Foreground="#7F8C8D" 
                           FontSize="11"
                           TextAlignment="Center"
                           Margin="0,20,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Нижний колонтитул -->
            <Border Grid.Row="2" 
                    Background="#ECF0F1" 
                    CornerRadius="0,0,10,10"
                    Padding="15,10">
                <TextBlock Text="Версия 1.0.0 • 2024" 
                           Foreground="#7F8C8D" 
                           FontSize="11"
                           HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>